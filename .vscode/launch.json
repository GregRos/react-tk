{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ui_test",
      "type": "debugpy",
      "request": "launch",
      "module": "example.basic",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "ui_more",
      "type": "debugpy",
      "request": "launch",
      "module": "example.more",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "RUN tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-s"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File (Module)",

      "type": "debugpy",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "module": "${relativeFileDirname}.${fileBasenameNoExtension}",
      "console": "integratedTerminal"
    }
  ]
}
