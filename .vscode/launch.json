{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",

      "type": "debugpy",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File (Module)",

      "type": "debugpy",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "module": "${relativeFileDirname}.${fileBasenameNoExtension}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "ui_test",
      "type": "debugpy",
      "request": "launch",
      "module": "example.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "RUN tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-s"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-s"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "Main",
      "type": "debugpy",
      "request": "launch",
      "program": "main.pyw",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ]
}
